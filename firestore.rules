rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Utility functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Community Groups/Metadata
    match /communities/{communityId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (
        resource.data.createdBy == request.auth.uid ||
        exists(/databases/$(database)/documents/communityMembers/$(communityId + '_' + request.auth.uid)) && 
        get(/databases/$(database)/documents/communityMembers/$(communityId + '_' + request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Community Membership
    match /communityMembers/{memberId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        // Admin of the community can also manage members
        get(/databases/$(database)/documents/communityMembers/$(resource.data.communityId + '_' + request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Community Posts (Modern)
    match /communityPosts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (
        resource.data.authorId == request.auth.uid ||
        // Check if user is admin of the community
        get(/databases/$(database)/documents/communityMembers/$(resource.data.communityId + '_' + request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Chat Messages (Modern/Flat)
    match /chatMessages/{messageId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid && 
                    request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);
      allow create: if isSignedIn(); // Allow system or other users to create notifications
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Mental Health Resources (Read-only)
    match /resources/{resourceId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    match /resourceCategories/{catId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Legacy Support (community_groups, community_posts, etc.)
    match /community_groups/{groupId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    match /community_posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /community_comments/{commentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}